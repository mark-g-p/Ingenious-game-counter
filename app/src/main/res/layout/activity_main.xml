<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.ingenious_counter.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/button_panel"
                android:layout_marginTop="@dimen/table_margin"
                android:background="@color/colorActive"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                >

                <TextView
                    style="@style/NameCellStyle"
                    android:text="" />

                <ImageButton
                    android:contentDescription="@string/red_star"
                    style="@style/ShapesCellStyle"
                    android:onClick="addPoint1"
                    android:src="@drawable/ic_red_star" />

                <ImageButton
                    android:contentDescription="@string/green_circle"
                    style="@style/ShapesCellStyle"
                    android:onClick="addPoint2"
                    android:src="@drawable/ic_green_circle" />

                <ImageButton
                    android:contentDescription="@string/blue_star"
                    style="@style/ShapesCellStyle"
                    android:onClick="addPoint3"
                    android:src="@drawable/ic_blue_star" />

                <ImageButton
                    android:contentDescription="@string/orange_hexagon"
                    style="@style/ShapesCellStyle"
                    android:onClick="addPoint4"
                    android:src="@drawable/ic_orange_hexagon" />

                <ImageButton
                    android:contentDescription="@string/yellow_star"
                    style="@style/ShapesCellStyle"
                    android:onClick="addPoint5"
                    android:src="@drawable/ic_yellow_star" />

                <ImageButton
                    android:contentDescription="@string/purple_ring"
                    style="@style/ShapesCellStyle"
                    android:onClick="addPoint6"
                    android:src="@drawable/ic_purple_circle" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/player1"
                android:padding="@dimen/row_padding">

                <TextView
                    style="@style/NameCellStyle"
                    android:text="@string/player1" />

                <TextView
                    android:id="@+id/player1_i1"
                    style="@style/PointCellStyle"
                    android:text="@string/zero" />

                <TextView
                    android:id="@+id/player1_i2"
                    style="@style/PointCellStyle"
                    android:text="@string/zero" />

                <TextView
                    android:id="@+id/player1_i3"
                    style="@style/PointCellStyle"
                    android:text="@string/zero" />

                <TextView
                    android:id="@+id/player1_i4"
                    style="@style/PointCellStyle"
                    android:text="@string/zero" />

                <TextView
                    android:id="@+id/player1_i5"
                    style="@style/PointCellStyle"
                    android:text="@string/zero" />

                <TextView
                    android:id="@+id/player1_i6"
                    style="@style/PointCellStyle"
                    android:text="@string/zero" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/player2"
                android:padding="16dp">

                <TextView
                    style="@style/NameCellStyle"
                    android:text="@string/player2" />

                <TextView
                    android:id="@+id/player2_i1"
                    style="@style/PointCellStyle"
                    android:text="@string/zero" />

                <TextView
                    android:id="@+id/player2_i2"
                    style="@style/PointCellStyle"
                    android:text="@string/zero" />

                <TextView
                    android:id="@+id/player2_i3"
                    style="@style/PointCellStyle"
                    android:text="@string/zero" />

                <TextView
                    android:id="@+id/player2_i4"
                    style="@style/PointCellStyle"
                    android:text="@string/zero" />

                <TextView
                    android:id="@+id/player2_i5"
                    style="@style/PointCellStyle"
                    android:text="@string/zero" />

                <TextView
                    android:id="@+id/player2_i6"
                    style="@style/PointCellStyle"
                    android:text="@string/zero" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/player3"
                android:padding="16dp">

                <TextView
                    style="@style/NameCellStyle"
                    android:text="@string/player3" />

                <TextView
                    android:id="@+id/player3_i1"
                    style="@style/PointCellStyle"
                    android:text="@string/zero" />

                <TextView
                    android:id="@+id/player3_i2"
                    style="@style/PointCellStyle"
                    android:text="@string/zero" />

                <TextView
                    android:id="@+id/player3_i3"
                    style="@style/PointCellStyle"
                    android:text="@string/zero" />

                <TextView
                    android:id="@+id/player3_i4"
                    style="@style/PointCellStyle"
                    android:text="@string/zero" />

                <TextView
                    android:id="@+id/player3_i5"
                    style="@style/PointCellStyle"
                    android:text="@string/zero" />

                <TextView
                    android:id="@+id/player3_i6"
                    style="@style/PointCellStyle"
                    android:text="@string/zero" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/player4"
                android:padding="16dp">

                <TextView
                    style="@style/NameCellStyle"
                    android:text="@string/player4" />

                <TextView
                    android:id="@+id/player4_i1"
                    style="@style/PointCellStyle"
                    android:text="@string/zero" />

                <TextView
                    android:id="@+id/player4_i2"
                    style="@style/PointCellStyle"
                    android:text="@string/zero" />

                <TextView
                    android:id="@+id/player4_i3"
                    style="@style/PointCellStyle"
                    android:text="@string/zero" />

                <TextView
                    android:id="@+id/player4_i4"
                    style="@style/PointCellStyle"
                    android:text="@string/zero" />

                <TextView
                    android:id="@+id/player4_i5"
                    style="@style/PointCellStyle"
                    android:text="@string/zero" />

                <TextView
                    android:id="@+id/player4_i6"
                    style="@style/PointCellStyle"
                    android:text="@string/zero" />
            </LinearLayout>

        </TableLayout>

        <TextView
            style="@style/NormalTextStyle"
            android:text="@string/currently_winning" />

        <TextView
            android:id="@+id/winner"
            style="@style/WinnerNameStyle"
            android:text="@string/winner" />


        <LinearLayout style="@style/CustomButtonBarStyle">

            <Button
                style="@style/CustomButtonBarButtonStyle"
                android:onClick="nextPlayer"
                android:text="@string/next" />

            <Button
                style="@style/CustomButtonBarButtonStyle"
                android:onClick="reset"
                android:text="@string/reset" />

            <Button
                style="@style/CustomButtonBarButtonStyle"
                android:onClick="getWinner"
                android:text="@string/check" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
