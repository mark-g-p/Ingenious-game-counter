                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/cell_padding"
                    android:text="@string/zero" />

                <TextView
                    android:id="@+id/player1_i4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/cell_padding"
                    android:text="@string/zero" />

                <TextView
                    android:id="@+id/player1_i5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/cell_padding"
                    android:text="@string/zero" />

                <TextView
                    android:id="@+id/player1_i6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/cell_padding"
                    android:text="@string/zero" />
            </TableRow>

            <TableRow
                android:id="@+id/player2"
                android:padding="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:padding="@dimen/cell_padding"
                    android:text="@string/player2" />

                <TextView
                    android:id="@+id/player2_i1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/cell_padding"
                    android:text="@string/zero" />

                <TextView
                    android:id="@+id/player2_i2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/cell_padding"
                    android:text="@string/zero" />

                <TextView
                    android:id="@+id/player2_i3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/cell_padding"
                    android:text="@string/zero" />

                <TextView
                    android:id="@+id/player2_i4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/cell_padding"
                    android:text="@string/zero" />

                <TextView
                    android:id="@+id/player2_i5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/cell_padding"
                    android:text="@string/zero" />

                <TextView
                    android:id="@+id/player2_i6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/cell_padding"
                    android:text="@string/zero" />
            </TableRow>

            <TableRow
                android:id="@+id/player3"
                android:padding="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:padding="@dimen/cell_padding"
                    android:text="@string/player3" />

                <TextView
                    android:id="@+id/player3_i1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/cell_padding"
                    android:text="@string/zero" />

                <TextView
                    android:id="@+id/player3_i2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/cell_padding"
                    android:text="@string/zero" />

                <TextView
                    android:id="@+id/player3_i3"
                    android:layout_width="0dp"
