<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.ingenious_counter.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/button_panel"
                android:layout_marginTop="@dimen/table_margin"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <TextView
                    style="@style/NameCellStyle"
                    android:text="" />

                <Button
                    style="@style/PointCellStyle"
                    android:background="@color/colorRedStar"
                    android:onClick="addPoint1" />

                <Button
                    style="@style/PointCellStyle"
                    android:background="@color/colorGreenCircle"
                    android:onClick="addPoint2" />

                <Button
                    style="@style/PointCellStyle"
                    android:background="@color/colorBlueStar"
                    android:onClick="addPoint3" />

                <Button
                    style="@style/PointCellStyle"
                    android:background="@color/colorOrangeHexagon"
                    android:onClick="addPoint4" />

                <Button
                    style="@style/PointCellStyle"
                    android:background="@color/colorYellowStar"
                    android:onClick="addPoint5" />

                <Button
                    style="@style/PointCellStyle"
                    android:background="@color/colorPurpleRing"
                    android:onClick="addPoint6" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/player1"
                android:padding="@dimen/row_padding">

                <TextView
                    style="@style/NameCellStyle"
                    android:text="@string/player1" />

                <TextView
                    android:id="@+id/player1_i1"
                    style="@style/PointCellStyle"
                    android:text="@string/zero" />

                <TextView
                    android:id="@+id/player1_i2"
                    style="@style/PointCellStyle"
                    android:text="@string/zero" />

                <TextView
                    android:id="@+id/player1_i3"
                    style="@style/PointCellStyle"
                    android:text="@string/zero" />

                <TextView
                    android:id="@+id/player1_i4"
                    style="@style/PointCellStyle"
                    android:text="@string/zero" />

                <TextView
                    android:id="@+id/player1_i5"
                    style="@style/PointCellStyle"
                    android:text="@string/zero" />

                <TextView
                    android:id="@+id/player1_i6"
                    style="@style/PointCellStyle"
                    android:text="@string/zero" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/player2"
                android:padding="16dp">

                <TextView
                    style="@style/NameCellStyle"
                    android:text="@string/player2" />

                <TextView
                    android:id="@+id/player2_i1"
                    style="@style/PointCellStyle"
                    android:text="@string/zero" />

                <TextView
                    android:id="@+id/player2_i2"
                    style="@style/PointCellStyle"
                    android:text="@string/zero" />

                <TextView
                    android:id="@+id/player2_i3"
                    style="@style/PointCellStyle"
                    android:text="@string/zero" />

                <TextView
                    android:id="@+id/player2_i4"
                    style="@style/PointCellStyle"
                    android:text="@string/zero" />

                <TextView
                    android:id="@+id/player2_i5"
                    style="@style/PointCellStyle"
                    android:text="@string/zero" />

                <TextView
                    android:id="@+id/player2_i6"
                    style="@style/PointCellStyle"
                    android:text="@string/zero" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/player3"
                android:padding="16dp">

                <TextView
                    style="@style/NameCellStyle"
                    android:text="@string/player3" />

                <TextView
                    android:id="@+id/player3_i1"
                    style="@style/PointCellStyle"
                    android:text="@string/zero" />

                <TextView
                    android:id="@+id/player3_i2"
                    style="@style/PointCellStyle"
                    android:text="@string/zero" />

                <TextView
                    android:id="@+id/player3_i3"
                    style="@style/PointCellStyle"
                    android:text="@string/zero" />

                <TextView
                    android:id="@+id/player3_i4"
                    style="@style/PointCellStyle"
                    android:text="@string/zero" />

                <TextView
                    android:id="@+id/player3_i5"
                    style="@style/PointCellStyle"
                    android:text="@string/zero" />

                <TextView
                    android:id="@+id/player3_i6"
                    style="@style/PointCellStyle"
                    android:text="@string/zero" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/player4"
                android:padding="16dp">

                <TextView
                    style="@style/NameCellStyle"
                    android:text="@string/player4" />

                <TextView
                    android:id="@+id/player4_i1"
                    style="@style/PointCellStyle"
                    android:text="@string/zero" />

                <TextView
                    android:id="@+id/player4_i2"
                    style="@style/PointCellStyle"
                    android:text="@string/zero" />

                <TextView
                    android:id="@+id/player4_i3"
                    style="@style/PointCellStyle"
                    android:text="@string/zero" />

                <TextView
                    android:id="@+id/player4_i4"
                    style="@style/PointCellStyle"
                    android:text="@string/zero" />

                <TextView
                    android:id="@+id/player4_i5"
                    style="@style/PointCellStyle"
                    android:text="@string/zero" />

                <TextView
                    android:id="@+id/player4_i6"
                    style="@style/PointCellStyle"
                    android:text="@string/zero" />
            </LinearLayout>

        </TableLayout>

        <TextView
            android:text="@string/currently_winning"
            style="@style/NormalTextStyle" />

        <TextView
            android:id="@+id/winner"
            android:text="@string/winner"
            style="@style/WinnerNameStyle" />


        <LinearLayout style="@style/CustomButtonBarStyle">

            <Button
                style="@style/CustomButtonBarButtonStyle"
                android:onClick="nextPlayer"
                android:text="@string/next" />

            <Button
                style="@style/CustomButtonBarButtonStyle"
                android:onClick="reset"
                android:text="@string/reset" />

            <Button
                style="@style/CustomButtonBarButtonStyle"
                android:onClick="getWinner"
                android:text="@string/check" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
