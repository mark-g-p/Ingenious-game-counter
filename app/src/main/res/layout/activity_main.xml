<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
<ScrollView
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.ingenious_counter.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/player1_score"
                style="@style/mainScoreStyle"
                android:text="@string/zero" />

            <TextView
                android:id="@+id/player2_score"
                android:text="@string/zero"
                style="@style/mainScoreStyle" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false">

            <LinearLayout
                android:id="@+id/player1"
                style="@style/playerPointsStyle">

                <TextView
                    android:id="@+id/player1_name"
                    style="@style/NameCellStyle"
                    android:text="@string/player1" />

                <TextView
                    android:id="@+id/player1_i1"
                    style="@style/PointCellStyle"
                    android:layout_width="wrap_content"
                    android:drawableEnd="@drawable/ic_red_star"
                    android:drawableRight="@drawable/ic_red_star"
                    android:onClick="addPoint1"
                    android:text="@string/zero" />

                <TextView
                    android:id="@+id/player1_i2"
                    style="@style/PointCellStyle"
                    android:drawableEnd="@drawable/ic_green_circle"
                    android:drawableRight="@drawable/ic_green_circle"
                    android:onClick="addPoint2"
                    android:text="@string/zero" />

                <TextView
                    android:id="@+id/player1_i3"
                    style="@style/PointCellStyle"
                    android:drawableEnd="@drawable/ic_blue_star"
                    android:drawableRight="@drawable/ic_blue_star"
                    android:onClick="addPoint3"
                    android:text="@string/zero" />

                <TextView
                    android:id="@+id/player1_i4"
                    style="@style/PointCellStyle"
                    android:drawableEnd="@drawable/ic_orange_hexagon"
                    android:drawableRight="@drawable/ic_orange_hexagon"
                    android:onClick="addPoint4"
                    android:text="@string/zero" />

                <TextView
                    android:id="@+id/player1_i5"
                    style="@style/PointCellStyle"
                    android:drawableEnd="@drawable/ic_yellow_star"
                    android:drawableRight="@drawable/ic_yellow_star"
                    android:onClick="addPoint5"
                    android:text="@string/zero" />

                <TextView
                    android:id="@+id/player1_i6"
                    style="@style/PointCellStyle"
                    android:drawableEnd="@drawable/ic_purple_circle"
                    android:drawableRight="@drawable/ic_purple_circle"
                    android:onClick="addPoint6"
                    android:text="@string/zero" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/player2"
                style="@style/playerPointsStyle">

                <TextView
                    android:id="@+id/player2_name"
                    style="@style/NameCellStyle"
                    android:text="@string/player2" />

                <TextView
                    android:id="@+id/player2_i1"
                    style="@style/PointCellStyle"
                    android:layout_width="wrap_content"
                    android:drawableEnd="@drawable/ic_red_star"
                    android:drawableRight="@drawable/ic_red_star"
                    android:onClick="addPoint1"
                    android:text="@string/zero" />

                <TextView
                    android:id="@+id/player2_i2"
                    style="@style/PointCellStyle"
                    android:drawableEnd="@drawable/ic_green_circle"
                    android:drawableRight="@drawable/ic_green_circle"
                    android:onClick="addPoint2"
                    android:text="@string/zero" />

                <TextView
                    android:id="@+id/player2_i3"
                    style="@style/PointCellStyle"
                    android:drawableEnd="@drawable/ic_blue_star"
                    android:drawableRight="@drawable/ic_blue_star"
                    android:onClick="addPoint3"
                    android:text="@string/zero" />

                <TextView
                    android:id="@+id/player2_i4"
                    style="@style/PointCellStyle"
                    android:drawableEnd="@drawable/ic_orange_hexagon"
                    android:drawableRight="@drawable/ic_orange_hexagon"
                    android:onClick="addPoint4"
                    android:text="@string/zero" />

                <TextView
                    android:id="@+id/player2_i5"
                    style="@style/PointCellStyle"
                    android:drawableEnd="@drawable/ic_yellow_star"
                    android:drawableRight="@drawable/ic_yellow_star"
                    android:onClick="addPoint5"
                    android:text="@string/zero" />

                <TextView
                    android:id="@+id/player2_i6"
                    style="@style/PointCellStyle"
                    android:drawableEnd="@drawable/ic_purple_circle"
                    android:drawableRight="@drawable/ic_purple_circle"
                    android:onClick="addPoint6"
                    android:text="@string/zero" />

            </LinearLayout>
        </LinearLayout>


        <TextView
            style="@style/NormalTextStyle"
            android:text="@string/currently_winning" />

        <TextView
            android:id="@+id/winner"
            style="@style/WinnerNameStyle"
            android:text="@string/winner" />


        <LinearLayout style="@style/CustomButtonBarStyle">

            <Button
                style="@style/CustomButtonBarButtonStyle"
                android:onClick="nextPlayer"
                android:text="@string/next" />

            <Button
                style="@style/CustomButtonBarButtonStyle"
                android:onClick="reset"
                android:text="@string/reset" />

            <Button
                style="@style/CustomButtonBarButtonStyle"
                android:onClick="getWinner"
                android:text="@string/check" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
</layout>